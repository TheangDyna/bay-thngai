{
  "name": "bay-thngai",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "apps/backend/*",
    "apps/frontend/*"
  ],
  "scripts": {
    "api-gateway": "yarn workspace api-gateway dev",
    "auth-service": "yarn workspace auth-service dev",
    "user-service": "yarn workspace user-service dev",
    "product-service": "yarn workspace product-service dev",
    "admin": "yarn workspace admin dev",
    "client": "yarn workspace client dev",
    "backend": "concurrently \"yarn api-gateway dev\" \"yarn auth-service dev\" \"yarn user-service dev\"",
    "docker:dev": "docker-compose -f ./docker-compose.dev.yml up -d",
    "docker:stop": "docker-compose -f ./docker-compose.dev.yml down",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "prettier": "^3.3.3"
  }
}
